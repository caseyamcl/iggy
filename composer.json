{
    "name": "caseyamcl/iggy",
    "type": "project",
    "license": "MIT",
    "keywords": ["prototype", "prototyping", "rapid", "iggy", "design"],
    "description": "A library for rapid design work using Twig and your favorite CSS preprocessors.",
    "homepage": "http://github.com/caseyamcl/iggy",
    "authors": [
        {
            "name":     "Casey McLaughlin",
            "email":    "caseyamcl@gmail.com",
            "homepage": "http://caseymclaughlin.com",
            "role":     "Developer"
        }
    ],    
    "require": {
        "twig/twig"                   : "^2.4",
        "aptoma/twig-markdown"        : "^3.0",
        "league/commonmark"           : "^0.17",
        "ralouphie/mimey"             : "^1.0",
        "react/http"                  : "^0.7",
        "zendframework/zend-diactoros": "^1.6",
        "oyejorge/less.php"           : "^1.7",
        "leafo/scssphp"               : "^0.7",
        "webmozart/path-util"         : "^2.3",
        "symfony/console"             : "^4.0",
        "symfony/filesystem"          : "^4.0",
        "gabrielelana/byte-units"     : "^0.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0",
        "mockery/mockery": "^0.9",
        "symfony/finder" : "^4.0"
    },
    "autoload": {
        "psr-4": { "Iggy\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": { "IggyTest\\": "tests/" }
    }
}
