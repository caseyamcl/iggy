{
    "name": "caseyamcl/iggy",
    "type": "project",
    "keywords": ["prototype", "prototyping", "rapid", "iggy", "design"],
    "description": "A library for rapid design work using Twig and your favorite CSS preprocessors.",
    "homepage": "http://github.com/caseyamcl/iggy",
    "authors": [
        {
            "name":     "Casey McLaughlin",
            "email":    "caseyamcl@gmail.com",
            "homepage": "http://caseymclaughlin.com",
            "role":     "Developer"
        }
    ],    
    "require": {
        "twig/twig"              : "~1.16",
        "skyzyx/mimetypes"       : "~1.1",

        "symfony/http-foundation": "~2.6",
        "symfony/yaml"           : "~2.6",

        "oyejorge/less.php"      : "~1.7",
        "leafo/scssphp"          : "~0.1",
        "patchwork/jsqueeze"     : "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit":   "~4.0",
        "mockery/mockery":   "~0.9"
    },
    "config": {
        "vendor-dir": "app/vendor"
    },
    "autoload": {
        "psr-4": { "Iggy\\": "app/src/" }
    },
    "autoload-dev": {
        "psr-4": { "IggyTest\\": "app/tests/" }
    },
    "scripts": {
        "post-create-project-cmd" : [
            "Iggy\\InstallIggy::postCreateProject"
        ]
    }
}
